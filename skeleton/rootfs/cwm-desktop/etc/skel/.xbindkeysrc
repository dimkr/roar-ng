# ~/.xbindkeysrc: XBindKeys settings

# system tools
"urxvt -title htop -e htop"
  Control + Shift + Escape

"urxvt -title htop -e htop"
  XF86Launch1

"frost -m"
  XF86Sleep

# launchers
"grun"
  Alt + F2

"grun"
  Mod4 + r

# terminal multiplexers
"urxvt -title dvtm -e dvtm"
  Mod4 + d

"urxvt -title Screen -e screen"
  Mod4 + s

# audio volume
"amixer set Master 5%-"
  XF86AudioLowerVolume

"amixer set Master 5%+"
  XF86AudioRaiseVolume

"amixer set Master toggle"
  XF86AudioMute
